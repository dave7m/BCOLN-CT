{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": true,
    "types": ["node", "hardhat"]
  },
  "include": [
    "deploy", "test", "typechain-types", "hardhat.config.ts"],
  "exclude": ["frontend", "node_modules"]
}
