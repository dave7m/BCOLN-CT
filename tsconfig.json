{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": true,
    "types": ["node", "hardhat", "chai", "mocha"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "deploy",
    "test",
    "typechain-types",
    "hardhat.config.ts"
  ],
  "exclude": [
    "frontend",
    "node_modules"
  ]
}
